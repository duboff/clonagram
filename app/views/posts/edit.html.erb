<div class="border-form-div">
  <%= form_for @post, html: { multipart: true, class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.text_area :description, :class => "form-control", :placeholder => 'Add a caption' %>
    </div>
    <div class="form-group">
      <%= f.text_field :tag_names, :placeholder => 'Tags', :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_field :address, :placeholder => 'Address', :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Update post', :class=>'btn btn-default' %>
    </div>
  <% end %>
</div>
