<div class="border-form-div">
  <%= form_for @post, class: 'form-horizontal', html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.text_area :description, :class => "form-control", "ng-model" => "description", :placeholder => 'Add a caption' %>
    </div>
    <div class="form-group">
      <%= f.text_field :tag_names, :placeholder => 'Tags', "ng-model" => "tags", :class => "form-control", :id => 'edit-tags' %>
    </div>
    <div class="form-group">
      <%= f.text_field :address, :placeholder => 'Address', "ng-model" => "address", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Update post', :class=>'btn btn-default' %>
    </div>
  <% end %>
</div>



<div class='preview-box'>
  <div class="col-sm-6 col-md-4 col-md-offset-4">
    <h2> Live Preview </h2>
    <div class="thumbnail">
      <p class="text-center"><small>
      <br>
        <strong><%= icon('user') %>
          <%= @post.user.username %></strong>
        |
        <%= timestamp(@post.created_at) %>
        |
        <%= link_to icon('location-arrow') + ' ' + @post.city, post_map_path(@post) %>
      </small></p>
      <hr>
      <div class="image-container">
        <div class="row text-center">
          <%= image_tag @post.picture.url(:medium), class: "img-responsive uploaded-pic img-rounded", :data => { src: "holder.js/280x200" } %>
        </div>
      </div>
      <div class="description-container caption">
        <p>{{description}}</p>
        <p><%= icon('tags') %>
          <a href='#'> {{tags}} </a>
        </p>
      </div>
    </div>
  </div>
</div>
